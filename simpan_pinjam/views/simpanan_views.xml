<odoo>
  <data>
    <record id="simpanan_tree_view" model="ir.ui.view">
        <field name="name">simpanan.tree.view</field>
        <field name="model">simpan_pinjam.simpanan</field>
        <field name="arch" type="xml">
            <tree string="Simpanan">
                <field name="nasabah_id"/>
                <field name="jenis_simpanan"/>
                <field name="jumlah_simpanan"/>
                <field name="tanggal_simpanan"/>
            </tree>
        </field>
    </record>

    <record id="simpanan_search_view" model="ir.ui.view">
        <field name="name">simpanan.search.view</field>
        <field name="model">simpan_pinjam.simpanan</field>
        <field name="arch" type="xml">
            <search string="Simpanan">
                <field name="nasabah_id"/>
                <field name="jenis_simpanan"/>
                <field name="tanggal_simpanan"/>
            </search>
        </field>
    </record>

    <record id="simpanan_kanban_view" model="ir.ui.view">
        <field name="name">simpanan.kanban.view</field>
        <field name="model">simpan_pinjam.simpanan</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="nasabah_id"/>
                <field name="jenis_simpanan"/>
                <field name="jumlah_simpanan"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card">
                            <div class="oe_kanban_content">
                                <h4><field name="nasabah_id"/></h4>
                                <p>Jenis: <field name="jenis_simpanan"/></p>
                                <p>Jumlah: <field name="jumlah_simpanan"/></p>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="simpanan_form_view" model="ir.ui.view">
        <field name="name">simpanan.form.view</field>
        <field name="model">simpan_pinjam.simpanan</field>
        <field name="arch" type="xml">
            <form string="Simpanan">
                <header>
                  <!-- Smart button: open move_id via model method -->
                  <button type="object" name="action_open_move" class="oe_stat_button"
                          attrs="{'invisible': [('move_id','=',False)]}">
                    <field name="move_id" widget="statinfo" string="Journal Entry"/>
                  </button>
                </header>
                <sheet>
                  <group>
                    <field name="nasabah_id" />
                    <field name="jenis_simpanan" />
                    <field name="jumlah_simpanan" />
                    <field name="tanggal_simpanan" />
                  </group>
                  <notebook>
                    <page string="Accounting">
                      <group>
                        <field name="journal_id" options="{'no_open': True}" />
                        <field name="bank_account_id" />
                        <field name="equity_account_id" />
                        <field name="move_id" readonly="1" />
                      </group>
                    </page>
                  </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_simpanan" model="ir.actions.act_window">
        <field name="name">Simpanan</field>
        <field name="res_model">simpan_pinjam.simpanan</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Klik untuk menambahkan Simpanan baru.
            </p>
        </field>
    </record>
  </data>
</odoo>
