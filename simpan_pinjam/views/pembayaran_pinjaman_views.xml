<odoo>
  <data>
    <record id="pembayaran_pinjaman_tree_view" model="ir.ui.view">
        <field name="name">pembayaran_pinjaman.tree.view</field>
        <field name="model">simpan_pinjam.pembayaran_pinjaman</field>
        <field name="arch" type="xml">
            <tree string="Pembayaran Pinjaman">
                <field name="nasabah_id"/>
                <field name="pinjaman_id"/>
                <field name="tanggal_pembayaran"/>
                <field name="jumlah_pembayaran"/>
                <field name="metode_pembayaran"/>
            </tree>
        </field>
    </record>

    <record id="pembayaran_pinjaman_search_view" model="ir.ui.view">
        <field name="name">pembayaran_pinjaman.search.view</field>
        <field name="model">simpan_pinjam.pembayaran_pinjaman</field>
        <field name="arch" type="xml">
            <search string="Pembayaran Pinjaman">
                <field name="pinjaman_id"/>
                <field name="tanggal_pembayaran"/>
                <field name="metode_pembayaran"/>
            </search>
        </field>
    </record>

    <record id="pembayaran_pinjaman_kanban_view" model="ir.ui.view">
        <field name="name">pembayaran_pinjaman.kanban.view</field>
        <field name="model">simpan_pinjam.pembayaran_pinjaman</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="pinjaman_id"/>
                <field name="jumlah_pembayaran"/>
                <field name="metode_pembayaran"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card">
                            <div class="oe_kanban_content">
                                <h4><field name="pinjaman_id"/></h4>
                                <p>Jumlah: <field name="jumlah_pembayaran"/></p>
                                <p>Metode: <field name="metode_pembayaran"/></p>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_pembayaran_pinjaman_form" model="ir.ui.view">
    <field name="name">pembayaran.pinjaman.form</field>
    <field name="model">simpan_pinjam.pembayaran_pinjaman</field>
    <field name="arch" type="xml">
      <form string="Pembayaran Pinjaman">
        <header>
          <button name="action_open_interest_move" type="object" class="oe_stat_button"
                  attrs="{'invisible': [('move_interest_id','=',False)]}">
            <field name="move_interest_id" widget="statinfo" string="JE Bunga"/>
          </button>
          <button name="action_open_principal_move" type="object" class="oe_stat_button"
                  attrs="{'invisible': [('move_principal_id','=',False)]}">
            <field name="move_principal_id" widget="statinfo" string="JE Pokok"/>
          </button>
        </header>
        <sheet>
          <group>
            <group>
              <field name="nasabah_id"/>
              <field name="pinjaman_id"/>
              <field name="tanggal_pembayaran"/>
              <field name="metode_pembayaran"/>
            </group>
            <group>
              <field name="pembayaran_pokok"/>
              <field name="pembayaran_bunga"/>
              <field name="jumlah_pembayaran" readonly="1"/>
            </group>
          </group>
          <group string="Accounting">
            <field name="journal_id"/>
            <field name="bank_account_id"/>
            <field name="receivable_account_id"/>
            <field name="interest_income_account_id"/>
            <field name="move_interest_id" readonly="1"/>
            <field name="move_principal_id" readonly="1"/>
            <field name="move_id" readonly="1" attrs="{'invisible': 1}"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

    <record id="action_pembayaran_pinjaman" model="ir.actions.act_window">
        <field name="name">Pembayaran Pinjaman</field>
        <field name="res_model">simpan_pinjam.pembayaran_pinjaman</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="help">Klik untuk menambahkan Pembayaran Pinjaman baru.</field>
    </record>
  </data>
</odoo>
