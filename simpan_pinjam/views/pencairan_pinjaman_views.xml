<odoo>
    <data>
        <record id="view_pencairan_pinjaman_form" model="ir.ui.view">
            <field name="name">simpan_pinjam.pencairan_pinjaman.form</field>
            <field name="model">simpan_pinjam.pencairan_pinjaman</field>
            <field name="arch" type="xml">
                <form string="Pencairan Pinjaman">
                    <sheet>
                        <group>
                            <group>
                                <field name="nasabah_id"/>
                                <field name="pinjaman_id"/>
                                <field name="tanggal_pencairan"/>
                                <field name="metode_pencairan"/>
                            </group>
                            <group>
                                <field name="jumlah_pencairan"/>
                                <field name="biaya_administrasi"/>
                                <field name="biaya_provisi"/>
                                <field name="total_pencairan" readonly="1"/>
                            </group>
                        </group>

                        <group string="Akunting">
                            <group>
                                <field name="journal_id"/>
                                <field name="bank_account_id"/>
                                <field name="receivable_account_id"/>
                            </group>
                            <group string="Pendapatan Biaya">
                                <field name="admin_fee_account_id"/>
                                <field name="provisi_fee_account_id"/>
                            </group>
                            <group string="Analytic (Opsional)">
                                <field name="admin_fee_analytic_id" options="{'no_create_edit': False}"/>
                                <field name="provisi_fee_analytic_id" options="{'no_create_edit': False}"/>
                            </group>
                        </group>

                        <group>
                            <field name="move_id" readonly="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- (Opsional) tree view -->
        <record id="view_pencairan_pinjaman_tree" model="ir.ui.view">
            <field name="name">simpan_pinjam.pencairan_pinjaman.tree</field>
            <field name="model">simpan_pinjam.pencairan_pinjaman</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="nasabah_id"/>
                    <field name="pinjaman_id"/>
                    <field name="tanggal_pencairan"/>
                    <field name="jumlah_pencairan"/>
                    <field name="biaya_administrasi"/>
                    <field name="biaya_provisi"/>
                    <field name="total_pencairan"/>
                    <field name="journal_id"/>
                    <field name="move_id"/>
                </tree>
            </field>
        </record>

        <!-- (Opsional) action jika belum ada -->
        <record id="action_pencairan_pinjaman" model="ir.actions.act_window">
            <field name="name">Pencairan Pinjaman</field>
            <field name="res_model">simpan_pinjam.pencairan_pinjaman</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- (Opsional) menu jika diperlukan -->
        <!-- <menuitem id="menu_pencairan_pinjaman" name="Pencairan Pinjaman" parent="account.menu_finance" action="action_pencairan_pinjaman"/> -->
    </data>
</odoo>