<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Form View Inherit - Add Custom Fields -->
    <record id="view_product_template_form_dc" model="ir.ui.view">
        <field name="name">product.template.form.dc</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">

            <!-- Add new page for DC/Logistics info -->
            <xpath expr="//notebook" position="inside">
                <page name="dc_logistics" string="DC &amp; Logistics">
                    <group string="Unit Measurements">
                        <field name="weight_per_unit"/>
                        <field name="volume_per_unit"/>
                        <field name="dry_weight_per_unit"/>
                        <field name="gloss_weight_per_unit"/>
                    </group>
                    <group string="Case/Box Dimensions">
                        <field name="case_width"/>
                        <field name="case_height"/>
                        <field name="case_depth"/>
                        <field name="case_volume" readonly="1"/>
                        <field name="case_weight"/>
                    </group>
                </page>
            </xpath>

        </field>
    </record>

</odoo>